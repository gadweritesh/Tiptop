<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/achievement_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/achievement_txt_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/gallery_date_bg"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:text="8/01/2018"
        android:textColor="#f6273a4e"
        android:textStyle="bold|italic" />


    <RelativeLayout
        android:id="@+id/relative_layout_achievement_list_item"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/gallery_list_item_body"
        android:gravity="center">

        <TextView
            android:id="@+id/achievement_title_textView"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gallery_title_bg_blue"
            android:maxLines="1"
            android:padding="3dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="Class 10th Topper"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/achievement_imageView"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/achievement_title_textView"
            android:layout_margin="5dp"
            android:background="@drawable/gallery_image_bg"
            android:padding="5dp"
            android:src="@android:drawable/ic_menu_gallery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/achievement_title_textView"
            android:layout_margin="1dp"
            android:layout_toEndOf="@+id/achievement_imageView"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/achievement_name_textView"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:text="Ramesh Gupta"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/achievement_desc_textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:text="Class 10 th"
                android:textColor="@color/textColor" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:padding="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:text="Category : "
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/achievement_category_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Sports"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic|bold" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/achievement_submitted_by"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/relative_layout_achievement_list_item"
        android:layout_below="@+id/relative_layout_achievement_list_item"
        android:layout_marginEnd="8dp"
        android:text="Submitted By: Manoj Tiwari "
        android:textStyle="italic" />

</RelativeLayout>
