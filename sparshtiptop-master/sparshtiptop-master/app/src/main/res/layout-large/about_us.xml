<?xml version="1.0"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/company_logo"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/relecotech_logo" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="RELECOTECH SOFTWARE SOLUTIONS PVT LTD."
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/company_logo"
        android:gravity="center"
        android:padding="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/aboutDesc"
        style="@android:style/TextAppearance.Small"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/companyName"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/company_desc" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/aboutDesc2"
        style="@android:style/TextAppearance.Small"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/aboutDesc"
        android:layout_below="@+id/aboutDesc"
        android:gravity="center"
        android:padding="2dp"
        android:autoLink="all"
        android:layout_alignStart="@+id/aboutDesc"
        android:layout_alignRight="@+id/aboutDesc"
        android:text="@string/company_desc2"
        android:layout_alignEnd="@+id/aboutDesc" />

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/aboutDesc2"
        android:layout_alignLeft="@+id/aboutDesc2"
        android:layout_alignRight="@+id/aboutDesc2"
        android:layout_alignStart="@+id/aboutDesc2"
        android:layout_below="@+id/aboutDesc2"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="Version 1.0.0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appVersion"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="12">

        <ImageView
            android:id="@+id/facebookImageButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1.28"
            android:src="@drawable/relecotechfacebook" />

        <ImageView
            android:id="@+id/youtbeImageButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1.28"
            android:src="@drawable/youtubeplaybutton" />

    </LinearLayout>

</RelativeLayout>