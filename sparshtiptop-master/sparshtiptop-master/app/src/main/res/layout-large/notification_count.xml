<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationRelativeLayout"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/ripple_effect"
    android:gravity="center">

    <ImageView
        android:id="@+id/icon_badge"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_notifications_white_24dp" />

    <TextView
        android:id="@+id/notification_count_textView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@id/icon_badge"
        android:layout_alignRight="@id/icon_badge"
        android:layout_alignTop="@id/icon_badge"
        android:background="@drawable/circle_notification"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="12sp" />
</RelativeLayout>


