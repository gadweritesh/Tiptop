<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assign_Attachment_CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="12dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/attachmentImageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/attachmentImageView"
            android:background="#EEEEEE"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/attachment_imageView_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@drawable/ic_attachment_imgtype" />

            <TextView
                android:id="@+id/imageFileNameTextView"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:drawableEnd="@drawable/ic_delete_forever_red_a400_24dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>