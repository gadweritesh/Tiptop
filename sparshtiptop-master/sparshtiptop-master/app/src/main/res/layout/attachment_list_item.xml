<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assign_Attachment_CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="12dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/assignmentImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/assignmentDownLoadRelativeLayout"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/download_attachment_button">

                <ImageView
                    android:id="@+id/download_imageView"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/download_white_34" />

                <TextView
                    android:id="@+id/downLoadTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/download_imageView"
                    android:text="@string/download"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />


            </RelativeLayout>

            <ProgressBar
                android:id="@+id/attachmentDownloadProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/relativeLayout1"
            android:background="#EEEEEE"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/attachment_imageView_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@drawable/ic_attachment_imgtype" />

            <TextView
                android:id="@+id/attachment_textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>