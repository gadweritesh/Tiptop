<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/exam_summary_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="50">


        <TextView
            android:id="@+id/examtype_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16.66"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingEnd="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingStart="2dp"
            android:paddingTop="10dp"
            android:text="Session 1  Exam"
            android:textColor="@color/textColor"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/examdate_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16.66"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingEnd="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingStart="2dp"
            android:paddingTop="10dp"
            android:text="10 Aug 16"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/examdate_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16.66"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:paddingBottom="10dp"
            android:paddingEnd="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingStart="2dp"
            android:paddingTop="10dp"
            android:text="Final grade"
            android:textColor="@color/textColor"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>
