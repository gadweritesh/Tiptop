<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/exam_subject_view_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/exam_subject_result_linarlayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:weightSum="50">

            <TextView
                android:id="@+id/subject_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="14"
                android:gravity="center"
                android:text="Subject" />

            <TextView
                android:id="@+id/obatinedmark_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="50" />

            <TextView
                android:id="@+id/totalmark_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="100" />

            <TextView
                android:id="@+id/obatinedgrade_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="A++" />

            <TextView
                android:id="@+id/comment_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:gravity="center"
                android:lines="2"
                android:text="Subject's Comment" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
